{
  "compilerOptions": {
    "lib": [
      "es2015" 
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
